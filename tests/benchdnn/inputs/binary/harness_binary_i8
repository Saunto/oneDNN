# i8
--reset

--alg=ADD,MUL,MAX,MIN,DIV,SUB

## Shouldn't do binary for different src and dst data types in in-place mod
## post_ops
--inplace=true,false
--ddt=s8 --sdt=s8:s8
--attr-post-ops='', \
                'sum:0.5', \
                'logistic:0:0:0.5', \
                'linear:2:0.125', \
                'sum:0.25;relu:-0.01', \
                'add:f32:per_oc', \
                'add:bf16:per_oc;linear:2:1', \
                'max:u8:per_oc', \
                'mul:s8;add:f32:common;sum:0.5;abs'
--batch=option_set_all
--inplace=false
--ddt=u8 --sdt=s8:s8
--batch=option_set_all

## scales
--inplace=true,false
--ddt=u8 --sdt=u8:u8
--attr-scales=, \
              src:common:0.25_src1:common:0.5, \
              src:common:0.125, \
              src1:common:2
--batch=option_set_all
--inplace=false
--ddt=s8 --sdt=u8:u8
--batch=option_set_all

## post_ops + scales
--inplace=true,false
--ddt=s8 --sdt=s8:u8
--attr-scales=, \
              src1:common:0.5, \
              src:common:0.125, \
              src:common:0.25_src1:common:0.5
--attr-post-ops='', \
                'sum:0.5', \
                'sum:0.5;logistic:0:0:2', \
                'linear:2:0.125'
--batch=option_set_all
--inplace=false
--ddt=u8 --sdt=s8:u8
--batch=option_set_all

# check for proper saturation
--attr-scales=src:common:4.29497e+09_src1:common:4.29497e+09
--batch=option_set_all

## bnorm u8 binary post-op impl
## TODO: Enable different src data types, different src0 and dst
## data types and not default scale for i8.
